{
    "theme": {
        "name": "Ceria Government Service",
        "description": "A design system for a government public service portal. It aims to be professional, trustworthy, and approachable through the use of warm, earthy tones, clean typography, and friendly illustrations.",
        "mood": ["Professional", "Friendly", "Trustworthy", "Modern", "Clean"]
    },
    "palette": {
        "primary": {
            "name": "Earthy Tan",
            "value": "#C4B3A3",
            "description": "Main background color, provides a warm and grounded feel."
        },
        "secondary": {
            "name": "Dark Umber",
            "value": "#4A3F35",
            "description": "Used for the header background, creating a slight contrast."
        },
        "accent": {
            "name": "Maroon",
            "value": "#8C1B1B",
            "description": "Used for primary buttons, quotes, and important highlights."
        },
        "neutral": {
            "textPrimary": "#333333",
            "textSecondary": "#555555",
            "textOnAccent": "#FFFFFF",
            "placeholder": "#A0A0A0",
            "background": "#FFFFFF",
            "border": "#D1D1D1"
        },
        "status": {
            "success": "#25D366",
            "info": "#3498DB",
            "warning": "#F39C12",
            "error": "#E74C3C"
        },
        "illustration": {
            "yellow": "#FBCB43",
            "green": "#25D366",
            "blue": "#4A90E2",
            "skinToneLight": "#F8D4B8",
            "hairDark": "#4A3F35",
            "clothingFemale": "#D15A7C",
            "clothingMale": "#5A8D87"
        }
    },
    "typography": {
        "fontFamily": {
            "sans": "Inter, Poppins, sans-serif",
            "body": "Inter, Poppins, sans-serif"
        },
        "baseSize": "16px",
        "styles": {
            "headingXL": {
                "fontFamily": "var(--font-sans)",
                "fontSize": "2.25rem",
                "fontWeight": "700",
                "lineHeight": "1.2"
            },
            "headingLG": {
                "fontFamily": "var(--font-sans)",
                "fontSize": "1.875rem",
                "fontWeight": "600",
                "lineHeight": "1.3"
            },
            "bodyMD": {
                "fontFamily": "var(--font-body)",
                "fontSize": "1rem",
                "fontWeight": "400",
                "lineHeight": "1.6"
            },
            "bodySM": {
                "fontFamily": "var(--font-body)",
                "fontSize": "0.875rem",
                "fontWeight": "400",
                "lineHeight": "1.5"
            },
            "navLink": {
                "fontFamily": "var(--font-sans)",
                "fontSize": "1rem",
                "fontWeight": "500"
            },
            "button": {
                "fontFamily": "var(--font-sans)",
                "fontSize": "1rem",
                "fontWeight": "600"
            }
        }
    },
    "layout": {
        "spacingUnit": "4px",
        "containerMaxWidth": "1280px",
        "headerHeight": "80px",
        "grid": {
            "columns": 12,
            "gutter": "24px"
        },
        "breakpoints": {
            "sm": "640px",
            "md": "768px",
            "lg": "1024px",
            "xl": "1280px"
        }
    },
    "effects": {
        "borderRadius": {
            "sm": "4px",
            "md": "8px",
            "lg": "12px",
            "full": "9999px"
        },
        "boxShadow": {
            "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
            "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
            "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)"
        }
    },
    "components": {
        "button": {
            "primary": {
                "background": "var(--palette-accent)",
                "color": "var(--palette-neutral-textOnAccent)",
                "borderRadius": "var(--effects-borderRadius-md)",
                "padding": "12px 24px",
                "border": "none",
                "typography": "var(--typography-styles-button)",
                "states": {
                    "hover": {
                        "background": "darken(var(--palette-accent), 10%)"
                    }
                }
            }
        },
        "input": {
            "style": {
                "background": "var(--palette-neutral-background)",
                "color": "var(--palette-neutral-textPrimary)",
                "borderRadius": "var(--effects-borderRadius-md)",
                "padding": "12px 16px",
                "border": "1px solid var(--palette-neutral-border)",
                "typography": "var(--typography-styles-bodyMD)"
            },
            "states": {
                "focus": {
                    "borderColor": "var(--palette-accent)",
                    "boxShadow": "0 0 0 2px rgba(140, 27, 27, 0.2)"
                }
            },
            "placeholder": {
                "color": "var(--palette-neutral-placeholder)"
            }
        },
        "searchBar": {
            "description": "A composite component with an input field and a button.",
            "container": {
                "display": "flex",
                "alignItems": "center"
            },
            "input": {
                "borderRadius": "var(--effects-borderRadius-md) 0 0 var(--effects-borderRadius-md)",
                "borderRight": "none"
            },
            "button": {
                "borderRadius": "0 var(--effects-borderRadius-md) var(--effects-borderRadius-md) 0"
            }
        },
        "card": {
            "quote": {
                "background": "var(--palette-accent)",
                "color": "var(--palette-neutral-textOnAccent)",
                "padding": "24px",
                "borderRadius": "var(--effects-borderRadius-lg)",
                "boxShadow": "var(--effects-boxShadow-md)",
                "decorativeElement": "A red ribbon or torn paper effect at the top right."
            }
        },
        "navbar": {
            "style": {
                "background": "var(--palette-secondary)",
                "height": "var(--layout-headerHeight)",
                "padding": "0 32px",
                "display": "flex",
                "justifyContent": "space-between",
                "alignItems": "center"
            },
            "logo": {
                "height": "40px"
            },
            "links": {
                "display": "flex",
                "gap": "32px",
                "color": "var(--palette-neutral-textOnAccent)",
                "typography": "var(--typography-styles-navLink)",
                "states": {
                    "hover": {
                        "color": "var(--palette-neutral-border)"
                    },
                    "active": {
                        "fontWeight": "700"
                    }
                }
            }
        },
        "fab": {
            "description": "Floating Action Button for accessibility.",
            "style": {
                "position": "fixed",
                "bottom": "24px",
                "left": "24px",
                "background": "var(--status-info)",
                "color": "var(--palette-neutral-textOnAccent)",
                "width": "56px",
                "height": "56px",
                "borderRadius": "var(--effects-borderRadius-full)",
                "display": "flex",
                "alignItems": "center",
                "justifyContent": "center",
                "boxShadow": "var(--effects-boxShadow-lg)"
            },
            "iconSize": "28px"
        }
    },
    "iconography": {
        "style": "Solid, filled",
        "defaultSize": "24px",
        "strokeWidth": "N/A"
    }
}
